@model List<ItemSetupAutomationPlatform.Models.ViewModels.IAP_FieldsViewModel>
@{
    ViewBag.Title = "Item Setup Automation Platform Fields";
}

<h2>@ViewBag.Title</h2>
<div class="row" style="text-align:right;padding:5px;">
    <a href="~/IAP_Fields/NewField" class="btn btn-primary">New</a>
</div>
<div class="row">
    <div class="col-md-12">
         <table class="table">
             <tr>
                 <th>Name</th>
                 <th>Label</th>
                 <th>Type</th>
                 <th></th>
             </tr>
            @foreach (var oElement in Model)
            {
         <tr>
             <td>@oElement.FieldName</td>
             <td>@oElement.FieldLabel</td>
             <td>@oElement.FieldType</td>
             <td>
                 @Html.ActionLink("Edit", "EditField", "IAP_Fields", new { FieldName = @oElement.FieldName }, new { @class = "btn btn-default" })
                 @Html.ActionLink("Delete", "DeleteField", "IAP_Fields", new { FieldName = @oElement.FieldName }, new { @class = "btn btn-danger" })
             </td>
         </tr>
            }
         </table>
    </div>

</div>

